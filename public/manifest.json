{
  "name": "روژان - فروشگاه آنلاین لباس",
  "short_name": "روژان",
  "description": "فروشگاه آنلاین لباس روژان با تمرکز روی کیفیت، طراحی مینیمال و تجربه خرید آسان",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#1f2937",
  "theme_color": "#dc2626",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "fa",
  "dir": "rtl",
  "categories": ["shopping", "fashion", "lifestyle"],
  "icons": [
    {
      "src": "/images/logo.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/images/logo.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/images/favicon.ico",
      "sizes": "48x48",
      "type": "image/x-icon"
    }
  ],
  "screenshots": [
    {
      "src": "/images/screenshot-mobile.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "صفحه اصلی موبایل"
    },
    {
      "src": "/images/screenshot-desktop.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "صفحه اصلی دسکتاپ"
    }
  ],
  "shortcuts": [
    {
      "name": "محصولات جدید",
      "short_name": "جدید",
      "description": "مشاهده جدیدترین محصولات",
      "url": "/?filter=new",
      "icons": [
        {
          "src": "/images/icon-new.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "محبوب‌ترین‌ها",
      "short_name": "محبوب",
      "description": "مشاهده پرفروش‌ترین محصولات",
      "url": "/?filter=popular",
      "icons": [
        {
          "src": "/images/icon-popular.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "سبد خرید",
      "short_name": "سبد",
      "description": "مشاهده سبد خرید",
      "url": "/cart",
      "icons": [
        {
          "src": "/images/icon-cart.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "حساب کاربری",
      "short_name": "حساب",
      "description": "ورود به حساب کاربری",
      "url": "/account",
      "icons": [
        {
          "src": "/images/icon-account.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://rozhann.shop/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "handle_links": "preferred",
  "capture_links": "new-client",
  "protocol_handlers": [
    {
      "protocol": "web+rozhann",
      "url": "/?q=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/upload",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "image",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui"
  ],
  "id": "rozhann-pwa",
  "version": "1.0.0"
}
